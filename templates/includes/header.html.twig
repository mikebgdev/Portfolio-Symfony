<header>
  <nav class="navbar fixed-top navbar-expand-lg bg-body-tertiary" data-bs-theme="dark">
    <div class="container-fluid">
      <a class="navbar-brand" href="#">
        <img src="{{ asset('build/images/logo_dark.webp') }}" width="100%" height="50px" alt="mikebg_dev">
      </a>

      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
              aria-controls="navbarNav" aria-expanded="false" aria-label="Navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse justify-content-lg-start" id="navbarNav">
        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
          <li class="nav-item">
            <a class="nav-link scrollto active" href="#hero">{{ 'header.home'|trans }}</a>
          </li>
          <li class="nav-item">
            <a class="nav-link scrollto" href="#about">{{ 'header.about'|trans }}</a>
          </li>
          <li class="nav-item">
            <a class="nav-link scrollto" href="#skills">{{ 'header.skills'|trans }}</a>
          </li>
          <li class="nav-item">
            <a class="nav-link scrollto" href="#projects">{{ 'header.portfolio'|trans }}</a>
          </li>
          <li class="nav-item">
            <a class="nav-link scrollto" href="#experience">{{ 'header.experience'|trans }}</a>
          </li>
          <li class="nav-item">
            <a class="nav-link scrollto" href="#education">{{ 'header.education'|trans }}</a>
          </li>
          <li class="nav-item">
            <a class="nav-link scrollto" href="#contact">{{ 'header.contact'|trans }}</a>
          </li>
        </ul>

        <ul class="navbar-nav">
          <li class="nav-item">
            <div class="form-check form-switch">
              <input class="form-check-input" type="checkbox" id="lightSwitch" title="{{ 'header.switch'|trans }}">
            </div>
          </li>

          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" id="dropdown-language" role="button"
               data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              {{ localeName(app.request.locale) }}
            </a>
            <ul class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdown-language">
              <li><a class="dropdown-item {% if app.request.locale == 'en' %}active{% endif %}"
                     href="{{ path('index', {_locale: 'en'}) }}">{{ localeName('en') }}</a></li>

              <li><a class="dropdown-item {% if app.request.locale == 'es' %}active{% endif %}"
                     href="{{ path('index', {_locale: 'es'}) }}">{{ localeName('es') }}</a></li>
            </ul>
          </li>
        </ul>

      </div>
    </div>
  </nav>
</header>
